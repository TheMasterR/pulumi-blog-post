{
  "compilerOptions": {
    // "types": ["jest"],
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}